print("Slot 1 must have a bucket of lava and slot 2 must have a bucket of water")

turtle.up()
turtle.select(1)
turtle.placeDown()

for i=1,15 do
	sleep(5+5*i)
	turtle.placeDown()
	turtle.up()
	turtle.select(2)
	turtle.placeDown()
	sleep(5)
	turtle.placeDown()
	turtle.up()
	turtle.select(1)
	turtle.placeDown()
end
