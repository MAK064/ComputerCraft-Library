-- functions to make things a little more compact
function digPlace()
	turtle.digDown()
	turtle.placeDown()
end

function placeDownForward()
	turtle.placeDown()
	turtle.forward()
end

function backPlace()
	turtle.back()
	turtle.place()
end

-- functions for compact for loops

function digPlaceLoop(x)
	for i=1,x do
		turtle.forward()
		digPlace()
	end
end

function placeDownForwardLoop(x)
	for i=1,x do
		placeDownForward()
	end
end

function backPlaceLoop(x)
	for i=1,x do
		turtle.back()
		turtle.place()
	end
end

--digging out the floor & laying floorboards
turtle.select(1)
digPlace()
turtle.forward()
digPlace()
turtle.turnLeft()
digPlaceLoop(4)
turtle.turnRight()
turtle.forward()
turtle.turnRight()
digPlace()
digPlaceLoop(5)
turtle.turnRight()
turtle.forward()
digPlace()
turtle.turnLeft()
